<%- include header.ejs %>
<div class="row" id="main_container">
  <div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table product-table">
        <thead class="mdb-color lighten-5">
          <tr>
            <th class="font-weight-bold">
              <strong>Product</strong>
            </th>
            <th class="font-weight-bold">
              <strong>QTY</strong>
            </th>
            <th class="font-weight-bold">
              <strong>Amount</strong>
            </th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% for(var i=0;i<products.length;i++){ %>
          <tr>
            <!-- <th scope="row">
              <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Products/13.jpg" alt="" class="img-fluid z-depth-0">
            </th> -->
            <td>
              <!-- <h5 class="mt-3"> -->
                <p><%= products[i].item.title%></p>
              <!-- </h5> -->
              <!-- <p class="text-muted">Apple</p> -->
            </td>
            <td>
              <input type="number" value="<%= products[i].qty %>" aria-label="Search" class="form-control" style="width: 100px" onchange="alterQty(this,this.value,<%= products[i].price %>)">
            </td>
            <td class="price"><%= products[i].price %></td>
            <!-- <td>
              <input type="number" value="" aria-label="Search" class="form-control" style="width: 100px">
            </td> -->
            <!-- <td class="font-weight-bold">
              <strong>$800</strong>
            </td> -->
            <!-- <td>
              <button type="button" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top"
                title="Remove item">X
              </button>
            </td> -->
          </tr>
        <% } %>
        </tbody>
      </table>
    </div>
  </div>

</div>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <strong>Total:<p id="totalprice"><%= totalPrice %></p></strong>
    </div>
  </div>
